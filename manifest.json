{
    "name": "English Story(Eigo Monogatari) Chrome Extension",
    "description": "Add words to favorite list.",
    "version": "1.0",
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": ["js/jquery-3.2.0.min.js",
                    "js/main.js",
                    "js/detail.js",
                    "js/knockout-3.4.2.js",
                    "js/hammer.min.js",
                    "js/timeago.min.js",
                    "js/howler.core.min.js",
                    "background.js",
                    "popup.js"]
                },
        "browser_action": {
            "default_icon": "icon.png",
            "default_popup": "popup.html"
    },
    "permissions": [
        "contextMenus",
        "storage"
    ],
    "icons": {
        "16": "icon.png"
    }
}
