{
    "name": "English Story(Eigo Monogatari) Chrome Extension",
    "description": "Add words to favorite list.",
    "version": "1.0",

    "manifest_version": 2,
    "background": {
        "persistent": false,
        "scripts": ["js/jquery-3.2.0.min.js","background.js"]
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "contextMenus",
        "storage"
    ],
    "icons": {
        "16": "icon.png"
    }
}
